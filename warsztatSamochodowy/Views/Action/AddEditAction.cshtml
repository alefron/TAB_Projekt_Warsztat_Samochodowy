@using warsztatSamochodowy.Models;
<div style="color: transparent;">
    @Model FormAddEditAction
</div>
<!doctype html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link href="/css/ShowPorposal.css" rel="stylesheet" />
    <link href="/css/AddProposal.css" rel="stylesheet" />
    <link href="/css/ManagerZlecenia.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.4/css/all.css" integrity="sha384-DyZ88mC6Up2uqS4h/KRgHuoeGwBcD4Ng9SiP4dIRy0EXTlnuz47vAwmeGwVChigm" crossorigin="anonymous">

    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    <!--<script src="~/lib/jquery/dist/jquery.min.js"></script>-->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="/js/site.js"></script>
    <script src="https://kit.fontawesome.com/b99e675b6e.js"></script>
    <script src="/js/ManagerPojazdy.js"></script>

    <script src="http://code.jquery.com/jquery.min.js"></script>
    <script src="/js/SelectFilter.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
</head>

<body>
    <div class="element">
        <h1>Akcja w zleceniu o nazwie: @Model[0].proposal.VehicleId  @Model[0].proposal.StartDate</h1>
    </div>
    @{
        if (Model[0].is_editable)
        {
            <div class="element">
                <h1>Nazwa akcji: </h1>
                <h4>@Model[0].action.Name</h4>
            </div>
        }
    }
<div class="element-add">
    <h1>Typ akcji: </h1>
    <div class="dropdown">
        <select class="form-control typeDropdown SelectFilter mdb-select md-form dropdown formElement" name="type" value="" searchable="Search here.." id="type">
            @{
                if (Model[0].is_editable)
                {
                    <option selected>@Model[0].action.ActionType.Name</option>
                    <option value="-1" disabled>wybierz typ akcji</option>
                }
                else
                {
                    <option value="-1" disabled selected>wybierz typ akcji</option>
                }

                foreach (var type in Model[0].types)
                {
                    <option>@type.Name</option>
                }
            }
        </select>

    </div>

</div>
    <div class="element-add">
        <h1>Pracownik: </h1>
        <div class="dropdown">
            <select class="form-control workerDropdown SelectFilter mdb-select md-form dropdown formElement" name="worker" value="" searchable="Search here.." id="worker">
                @{
                    if (Model[0].is_editable)
                    {
                        <option selected>@Model[0].action.WorkerId</option>
                        <option value="-1" disabled>przypisz pracownika</option>
                    }
                    else
                    {
                        <option value="-1" disabled selected>przypisz pracownika</option>
                    }

                    foreach (var worker in Model[0].workers)
                    {
                        <option>@worker.FirstName @worker.LastName</option>
                    }
                }
            </select>

        </div>

    </div>
    <div class="element-add">
        <h1>Wykonaj po: </h1>
        <div class="dropdown">
            <select class="form-control sequenceDropdown SelectFilter mdb-select md-form dropdown formElement" name="sequenceNumber" value="" searchable="Search here.." id="sequenceNumber">
                @{
                    if (Model[0].is_editable && Model[0].action.SequenceNumber != 0)
                    {
                        warsztatSamochodowy.Models.Action actionBefore = new warsztatSamochodowy.Models.Action();
                        foreach (var act in Model[0].actions)
                        {
                            if (act.SequenceNumber == Model[0].action.SequenceNumber)
                            {
                                actionBefore = act;
                            }
                        }
                        <option selected>@actionBefore.ActionType.Name</option>
                        <option value="-1" disabled>wykonaj po</option>
                    }
                    else
                    {
                        <option value="-1" disabled selected>wykonaj po</option>
                    }

                    foreach (var action in Model[0].actions)
                    {
                        <option>@action.ActionType.Name</option>
                    }
                }
            </select>
        </div>

    </div>
    <br>
    <br>
    <br>

    <div class='my-row'>
        <div class='my-column'>
            <div class='element'>
                <h1>Opis: </h1>
            </div>
            <div class='proposal-card'>
                <textarea rows="5" cols="58" id="opisZlogszenia" name="opisZgloszenia" placeholder="Wnosze o uzyczenie Stefana Tobiasiewicza na jedna noc do pokoju 218, placone z g�ry przelewem"> </textarea>
            </div>
        </div>
        <div class='my-column'>
            <div class='element'>
                <h1>Rezultat: </h1>
            </div>
            <div class='proposal-card'>
                <p>jakis teskt ciekawe czy zadziala adasdasdasdasdasdasdsdasdsadasdsdsad</p>
            </div>
        </div>
    </div>
    <br />
    <br />




    <div class="save-cancel">
        <button class="save-button">Zapisz</button>
        <button class="cancel-button">Anuluj</button>
    </div>

</body>

